<% if !match.closed? %>
  <%= form_with(url: match_close_path(match), method: "post") do %>
    <%= submit_tag("Close Match") %>
  <% end %>
<% elsif match.winner_id.present? %>
  Closed
<% else %>
  <%= form_with(url: match_open_path(match), method: "post") do %>
    <%= submit_tag("Open Match") %>
  <% end %>
<% end %>
