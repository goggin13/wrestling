<p id="notice"><%= notice %></p>

<h1>Wrestlers</h1>

<%= link_to 'New Wrestler', new_wrestler_path %>
<br>

<table>
  <thead>
    <tr>
      <th colspan="2">Name</th>
      <th>College</th>
      <th>College year</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wrestlers.each do |wrestler| %>
      <tr>
        <td><%= wrestler.name %></td>
        <td><%= avatar(wrestler) %></td>
        <td><%= wrestler.college %></td>
        <td><%= wrestler.college_year %></td>
        <td><%= wrestler.bio %></td>
        <td><%= link_to 'Show', wrestler %></td>
        <td><%= link_to 'Edit', edit_wrestler_path(wrestler) %></td>
        <td><%= link_to 'Destroy', wrestler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wrestler', new_wrestler_path %>
