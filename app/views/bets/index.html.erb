<p id="notice"><%= notice %></p>

<h1>Bets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Matches</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Wager</th>
      <th>Payout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.user_id %></td>
        <td><%= bet.match_id %></td>
        <td><%= bet.type %></td>
        <td><%= bet.amount %></td>
        <td><%= bet.wager %></td>
        <td><%= bet.payout %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bet', new_bet_path %>
